<% if !@current_user %>
<div id="fb-root"></div>
<script>(function(d, s, id) {
	var js, fjs = d.getElementsByTagName(s)[0];
	if (d.getElementById(id)) return;
	js = d.createElement(s); js.id = id;
	js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
	fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>
<% end %>

<div id="header">
	<% if @notice %>
		<div style="text-align: left;">
			<label style="font-size: 1.66em; font-weight: bold; color: red; font-style: italic; background-color: #FFE5E5;"><div id="spacer_3"></div><%= @notice %><br><br></label>
		</div>
	<% end %> 
	<div>
		<div><%= link_to image_tag("/images/geopollster-logo-large.jpg", :title => 'GeoPollster', :class => 'float_left'), :controller => 'welcome' %></div>
		<div style="padding-top:5px;">
			<div>
				<% if !@current_user %>
					<div style="float: left;">
						<div class="fb-like" data-href="http://geopollster.com" data-send="false" data-layout="button_count" data-width="1" data-show-faces="false" data-font="arial"></div>
					</div>
				<% end %>
				<div style="float: right;">
					<div style="float: left;">
						<a href="http://www.facebook.com/geopollster" target="_blank">
							<%= image_tag("/images/facebook2.png", :title => 'GeoPollster on Facebook', :class => 'float_left', :style => 'padding-left:0px;') %>
					 </a>
					</div>
					<div style="float: left;">
						<a href="http://twitter.com/geopollster" target="_blank">
							<%= image_tag("/images/twitter2.png", :title => 'GeoPollster on Twitter', :class => 'float_left', :style => 'padding-left:2px;') %>
						</a>
					</div>
					<div style="float: left;">
						<a href="https://plus.google.com/110304791327046211459" target="_blank">
							<%= image_tag("/images/google-plus.png", :title => 'GeoPollster on Google+', :class => 'float_left', :style => 'padding-left:2px;') %>
						</a>
					</div>
					<div style="float: left;">
						<a href="https://foursquare.com/app/geopollster/IRKXVACINCMFPJCS5MNM0OSWZFFCCNLNOQXM3QKO4WTY4YGA" target="_blank">
							<%= image_tag("/images/foursquare2.png", :title => 'GeoPollster on Foursquare', :size => "30x30", :class => 'float_left', :style => 'padding-left:2px;') %>
						</a>
					</div>
				</div>
				
				<% if @current_user %>
					<div style="width: 330px; height: 90px; padding-top: 50px; padding-right: 40px; float: right; border: 0px solid #D168AA; ">
						<%= render :partial => 'layouts/quote' %>  
					</div>
				<% else %>
					<div style="width: 330px; height: 90px; padding-top: 20px; padding-right: 140px; float: right; border: 0px solid #D168AA; ">
						<%= render :partial => 'layouts/quote' %>  
					</div>
					<div style="float: right;">
						<%= link_to 'Sign Up', { :controller => 'oauth', :action => 'start' }, { :class => 'signupButton', :title=>'Sign Up' } %>
					</div>
				<% end %>
				

				
			</div>
		</div>
	</div>
	<div class="clear_floats">
		<br><br>
		<% unless @hide_nav %>
			<%= render :partial => 'layouts/nav', :locals => { :current_user => @current_user } %>
		<% end %>
	</div>
</div>